hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_.:[:alnum:]]*

contexts:
  main:
    - match: |
        (?xi)\s*
        (<)
        ({{commonIdentifier}})
      captures:
        1: >-
          meta.tag.jsx.jsx1
          punctuation.delimiter.tag.begin.jsx.jsx1
          punctuation.definition.tag.begin.jsx.jsx1
        2: >-
          meta.tag.jsx.jsx1
          entity.name.tag.jsx.jsx1
      set: [
        content,
        attributes
      ]

  attributes:
    # Self closing tag.
    - match: (?=\s*/>)
      pop: true
    # Normal tag.
    - match: \s*(>)
      captures:
        1: >-
          meta.tag.jsx.jsx1
          punctuation.delimiter.tag.end.jsx.jsx1
          punctuation.definition.tag.end.jsx.jsx1
      pop: true
    # Attributes.
    - match: ""
      push:
        - include: Packages/Naomi/syntaxes/jsx1/attribute.sublime-syntax
        - match: ""
          pop: true

  content:
    - clear_scopes: true
    - meta_scope: source.jsx.jsx1
    # Self closing tag.
    - match: \s*(/>)
      captures:
        1: >-
          meta.tag.jsx.jsx1
          punctuation.delimiter.tag.end.jsx.jsx1
          punctuation.definition.tag.end.jsx.jsx1
      pop: true
    # Closing tag.
    - match: |
        (?x)\s*
        (</)(\2)(>)
      captures:
        1: >-
          meta.tag.jsx.jsx1
          punctuation.delimiter.tag.begin.jsx.jsx1
          punctuation.definition.tag.begin.jsx.jsx1
        2: >-
          meta.tag.jsx.jsx1
          entity.name.tag.jsx.jsx1
        3: >-
          meta.tag.jsx.jsx1
          punctuation.delimiter.tag.end.jsx.jsx1
          punctuation.definition.tag.end.jsx.jsx1
      pop: true
    # Sub tags.
    - match: ""
      push:
        - clear_scopes: true
        - include: Packages/Naomi/syntaxes/jsx1/component.sublime-syntax
        - include: main
        - match: |
            (?x)
            (?=\s*(?>/>|<))
          pop: true
        - match: .
          scope: source.jsx
