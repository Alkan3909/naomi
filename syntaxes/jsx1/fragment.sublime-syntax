hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_.:[:alnum:]]*

contexts:
  main:
    - match: \s*(<)(>)
      captures:
        1: punctuation.definition.tag.begin.jsx.jsx1
        2: punctuation.definition.tag.end.jsx.jsx1
      set: content

  content:
    - clear_scopes: true
    - meta_scope: source.jsx.jsx1
    # Closing tag.
    - match: \s*(</)(>)
      captures:
        1: punctuation.definition.tag.begin.jsx.jsx1
        2: punctuation.definition.tag.end.jsx.jsx1
      pop: true
    # Sub tags.
    - match: ""
      push:
        - clear_scopes: true
        - include: main
        - include: Packages/Naomi/syntaxes/jsx1/component.sublime-syntax
        - include: Packages/Naomi/syntaxes/jsx1/element.sublime-syntax
        - match: |
            (?x)
            (?=\s*<)
          pop: true
        - match: .|\n
          scope: source.jsx
