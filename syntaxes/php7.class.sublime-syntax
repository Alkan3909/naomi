hidden: true

variables:
  commonIdentifier: |
    [a-z\x{7f}-\x{ff}_]
    [a-z\x{7f}-\x{ff}0-9_]*

scope: ...

contexts:
  main:
    - match: (?i)\bclass(?!\\)\b
      scope: keyword.structure.class.php
      set: declaration

  declaration:
    - meta_scope: class.php
    - include: php7.comments.no-pop.sublime-syntax
    # Extends.
    - match: (?i)\bextends\b
      scope: keyword.structure.inherit.php
      push: extend-target
    # Implements.
    - match: (?i)\bimplements\b
      scope: keyword.structure.inherit.php
      push: implement-targets
    # Class's name.
    - match: (?xi)\b{{commonIdentifier}}\b
      scope: entity.name.structure.class.php
    # Body.
    - match: \{
      scope: >-
        class.body.php
        punctuation.delimiter.structure.class.body.begin.php
      set: body

  body:
    - meta_content_scope: >-
        class.php
        class.body.php
        class.body.content.php
    - match: \}
      scope: >-
        class.php
        class.body.php
        punctuation.delimiter.structure.class.body.end.php
      pop: true
    # Body's content.
    - match: ""
      push:
        - include: php7.comments.sublime-syntax
        - include: php7.operator.sublime-syntax
        - include: php7.constant.sublime-syntax
        - include: php7.use.sublime-syntax
        - include: php7.modifier.sublime-syntax
        - include: php7.keyword.sublime-syntax
        - include: php7.function.sublime-syntax
        - include: php7.variable.sublime-syntax
        - include: php7.type.sublime-syntax
        - match: ""
          pop: true

  extend-target:
    - meta_scope: inherit.php
    - include: php7.comments.no-pop.sublime-syntax
    - match: (?=\{)
      pop: true
    - match: (?i)(?=\bimplements\b)
      pop: true
    - include: php7.type.sublime-syntax

  implement-targets:
    - meta_scope: implement.php
    - include: php7.comments.no-pop.sublime-syntax
    - match: (?=\{)
      pop: true
    - match: ""
      push: [
        implement-target-delimiter,
        implement-target
      ]

  implement-target:
    - include: php7.comments.no-pop.sublime-syntax
    - include: php7.type.sublime-syntax

  implement-target-delimiter:
    - include: php7.comments.no-pop.sublime-syntax
    - match: ","
      scope: punctuation.delimiter.structure.implement.php
      pop: true
    - match: (?=\S)
      pop: true
