hidden: true

scope: ...

variables:
  commonIdentifier: |
    [a-z\x{7f}-\x{ff}_]
    [a-z\x{7f}-\x{ff}0-9_]*

  constantIdentifier: |
    [A-Z\x{7f}-\x{ff}_]
    [A-Z\x{7f}-\x{ff}0-9_]*

contexts:
  # |  Operator  |  Description        |
  # | :--------: | :------------------ |
  # | instanceof |                     |
  # |     &      | Reference.          |
  # |     .     | Member access.       |
  # |     ->     | Member access.      |
  # |     ::     | Scope resolution.   |
  # |     ?      |                     |
  # |     :      |                     |
  main:
    - match: "&(?![&=])"
      scope: keyword.operator.reference.mql.4
      pop: true
    - match: |
        (?x)
        (?> ->
          | \.
        )
      scope: keyword.operator.member.access.mql.4
      set: member-access
    # Other.
    - match: "\\?|:"
      scope: keyword.operator.php.7

  member-access:
    - include: Packages/Naomi/syntaxes/mql.4/function-call/normal.sublime-syntax
    # Constant.
    - match: (?x)\b{{constantIdentifier}}
      scope: constant.mql.4
      pop: true
    # Property.
    - match: (?xi){{commonIdentifier}}
      scope: >-
        variable.property.mql.4
        entity.name.variable.mql.4
      pop: true
