hidden: true

scope: ...

variables:
  commonIdentifier: |
    [_[:alpha:]]
    [_[:alnum:]]*

contexts:
  main:
    - include: common-variable

  common-variable:
    - match: (?i)\bthis\b
      scope: keyword.other.mql.4
      set: array-item-access-begin
    - match: |
        (?xi)
        (?> \s*(\**)\b
          | \b
        )
        ({{commonIdentifier}})\b
      captures:
        0: variable.mql.4
        1: keyword.operator.pointer.mql.4
        2: entity.name.variable.mql.4
      set: array-item-access-begin

  array-item-access-begin:
    # No array item access found.
    - match: (?!\s*\[)
      pop: true
    # Array item access.
    - match: \[
      scope: punctuation.delimiter.array.item.access.begin.mql.4
      push: [
        array-item-access-end,
        array-index
      ]

  array-index:
    - include: Packages/Naomi/syntaxes/mql4/expression.sublime-syntax

  array-item-access-end:
    - meta_scope: array.item.access.mql.4
    - match: \]
      scope: punctuation.delimiter.array.item.access.end.mql.4
      pop: true
