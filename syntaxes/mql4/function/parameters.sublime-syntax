hidden: true

scope: ...

variables:
  commonIdentifier: |
    [_[:alpha:]]
    [_[:alnum:]]*

  typeIdentifier: |
    {{commonIdentifier}}

contexts:
  main:
    # Function without parameters.
    - match: |
        (?x)
        (\()
        (
          (?:
            \s*(void)\s*
          )?
        )
        (\))
      captures:
        0: function.parameters.mql.4
        1: punctuation.delimiter.function.parameters.begin.mql.4
        2: function.parameters.content.mql.4
        3: >-
          support.type.mql.4
          entity.name.type.mql.4
        4: punctuation.delimiter.function.parameters.end.mql.4
      pop: true
    # Parameters.
    - match: \(
      scope: punctuation.delimiter.function.parameters.begin.mql.4
      set: parameters

  parameters:
    - meta_scope: function.parameters.mql.4
    - meta_content_scope: function.parameters.content.mql.4
    - include: Packages/Naomi/syntaxes/mql4/comment.no-pop.sublime-syntax
    - match: \)
      scope: punctuation.delimiter.function.parameters.end.mql.4
      pop: true
    # Constant parameters.
    - match: |
        (?xi)
        (?=\s*const\s+)
      push: [
        param-delimiter,
        param-operators,
        param-variable,
        type,
        const-keyword
      ]
    # Normal parameters.
    - match: (?=\S)
      push: [
        param-delimiter,
        param-operators,
        param-variable,
        type
      ]

  const-keyword:
    - match: const
      scope: keyword.constant.mql.4
      pop: true

  type:
    - include: Packages/Naomi/syntaxes/mql4/comment.no-pop.sublime-syntax
    - include: Packages/Naomi/syntaxes/mql4/type.sublime-syntax

  param-variable:
    - include: Packages/Naomi/syntaxes/mql4/comment.no-pop.sublime-syntax
    - match: \s*(&)
      captures:
        1: keyword.operator.reference.mql.4
    - include: Packages/Naomi/syntaxes/mql4/variable.sublime-syntax

  param-operators:
    - include: Packages/Naomi/syntaxes/mql4/comment.no-pop.sublime-syntax
    - match: (?=,|\))
      pop: true
    - match: \[\]
      scope: punctuation.delimiter.array.mql.4
    - match: \=
      scope: keyword.operator.mql.4
      set: param-default-value

  param-default-value:
    - include: Packages/Naomi/syntaxes/mql4/comment.no-pop.sublime-syntax
    - match: (?=,|\))
      pop: true
    - include: Packages/Naomi/syntaxes/mql4/constant.sublime-syntax
    - include: Packages/Naomi/syntaxes/mql4/literal.sublime-syntax

  param-delimiter:
    - include: Packages/Naomi/syntaxes/mql4/comment.no-pop.sublime-syntax
    - match: (?=\))
      pop: true
    - match: ","
      scope: punctuation.delimiter.function.parameters.mql.4
      pop: true
