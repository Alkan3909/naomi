hidden: true

scope: ...

variables:
  commonIdentifier: |
    [_[:alpha:]]
    [_[:alnum:]]*

contexts:
  main:
    # End.
    - match: ;
      scope: punctuation.delimiter.function.declaration.end.mql.mql4
      pop: true
    # Pure virtual or const.
    - match: |
        (?x)\s*
        (?> (const)\s*
          |
          (
            =\s*
            (?> 0
              | NULL
            )\s*
          )?
        )
      captures:
        1: keyword.function.const.mql.mql4
        2: keyword.function.virtual.mql.mql4
    # Initialization.
    - match: ":"
      scope: punctuation.initialization.list.begin.mql.mql4
      set: initializations
    # Normal body.
    - include: body-start

  initializations:
    - match: ""
      set: [
        delimiter,
        end-initialization,
        initialization-expression,
        begin-initialization,
        initialized-identifier
      ]

  initialized-identifier:
    - match: (?xi){{commonIdentifier}}
      scope: entity.name.ambiguous.mql.mql4
      pop: true

  begin-initialization:
    - match: \(
      scope: punctuation.delimiter.initialization.begin.mql.mql4
      pop: true

  initialization-expression:
    - match: (?=\))
      pop: true
    - match: \,
      scope: punctuation.delimiter.initialization.mql.mql4
    - include: Packages/Naomi/syntaxes/mql4/expression.no-pop.sublime-syntax

  end-initialization:
    - match: \)
      scope: punctuation.delimiter.initialization.end.mql.mql4
      pop: true

  delimiter:
    - meta_content_scope: function.mql.mql4
    - include: body-start
    - match: \,
      scope: punctuation.delimiter.initialization.mql.mql4
      set: initializations

  body-start:
    - match: \{
      scope: >-
        function.body.mql.mql4
        punctuation.delimiter.function.body.begin.mql.mql4
      set: body-content

  body-content:
    - meta_content_scope: >-
        function.mql.mql4
        function.body.mql.mql4
        function.body.content.mql.mql4
    - match: \}
      scope: >-
        function.mql.mql4
        function.body.mql.mql4
        punctuation.delimiter.function.body.end.mql.mql4
      pop: true
    - match: ""
      push:
        # Statements.
        - include: Packages/Naomi/syntaxes/mql4/statement/hanging.sublime-syntax
        - include: Packages/Naomi/syntaxes/mql4/statement/bodied.sublime-syntax
        - include: Packages/Naomi/syntaxes/mql4/statement/simple.sublime-syntax
        - include: Packages/Naomi/syntaxes/mql4/preprocessor.sublime-syntax
        # Expressions.
        - include: Packages/Naomi/syntaxes/mql4/expression.sublime-syntax
