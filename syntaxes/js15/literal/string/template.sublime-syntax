hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_[:alnum:]]*

  hexEscapedChar: |
    x[a-f0-9]{2}

  unicodeEscapedChar: |
    (?> u[a-f0-9]{4}
      | u\{[a-f0-9]+\}
    )

  escapeSequences: |
    \\
    (?> [`\\$bfnrtv]
      | {{hexEscapedChar}}
      | {{unicodeEscapedChar}}
    )

contexts:
  main:
    - match: |
        (?xi)
        ({{commonIdentifier}})?
        (\`)
      captures:
        0: string.template.js.2015
        1: entity.name.function.tag.js.2015
        2: punctuation.delimiter.string.begin.js.2015
      set: escape-a

  escape-a:
    - meta_content_scope: string.template.js.2015
    - match: (?x){{escapeSequences}}
      scope: constant.character.escape.a.js.2015
      set: escape-b
    - include: embedded-expression
    - include: template-end

  escape-b:
    - meta_content_scope: string.template.js.2015
    - match: (?x){{escapeSequences}}
      scope: constant.character.escape.b.js.2015
      set: escape-a
    - include: embedded-expression
    - include: template-end

  embedded-expression:
    - match: \$\{
      scope: operator.embedded.expression.begin.js.2015
      push: embedded-content

  embedded-content:
    - match: \}
      scope: operator.embedded.expression.end.js.2015
      pop: true
    - include: Packages/Naomi/syntaxes/fjsx15/expression.no-pop.sublime-syntax

  template-end:
    - match: \`
      scope: >-
        string.template.js.2015
        punctuation.delimiter.string.end.js.2015
      pop: true
