hidden: true

scope: ...

variables:
  hexEscapedChar: |
    x[a-f0-9]{2}

  unicodeEscapedChar: |
    (?> u[a-f0-9]{4}
      | u\{[a-f0-9]+\}
    )

  doubleQuotedEscapeSequences: |
    \\
    (?> ["\\bfnrtv]
      | {{hexEscapedChar}}
      | {{unicodeEscapedChar}}
    )

contexts:
  main:
    - match: \"
      scope: >-
        string.quoted.double.js.js15
        punctuation.delimiter.string.begin.js.js15
      with_prototype:
        - match: (?<!\\)\n
          set: trap
        - match: \"
          scope: >-
            string.quoted.double.js.js15
            punctuation.delimiter.string.end.js.js15
          pop: true
      set: escape-a

  trap:
    - meta_content_scope: context.trap

  escape-a:
    - meta_content_scope: string.quoted.double.js.js15
    - match: (?x){{doubleQuotedEscapeSequences}}
      scope: constant.character.escape.a.js.js15
      set: escape-b

  escape-b:
    - meta_content_scope: string.quoted.double.js.js15
    - match: (?x){{doubleQuotedEscapeSequences}}
      scope: constant.character.escape.b.js.js15
      set: escape-a
