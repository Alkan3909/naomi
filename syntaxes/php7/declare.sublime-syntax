hidden: true

variables:
  commonIdentifier: |
    [a-z\x{7f}-\x{ff}_]
    [a-z\x{7f}-\x{ff}0-9_]*

scope: ...

contexts:
  main:
    - match: (?i)\bdeclare\b
      scope: keyword.statement.declare.php
      push: declaration

  declaration:
    - meta_scope: declare.php
    - match: \(
      scope: punctuation.delimiter.statement.declare.parameters.begin.php
      push: parameters
    - match: \)
      scope: >-
        declare.parameters.php
        punctuation.delimiter.statement.declare.parameters.end.php
      set: body

  parameters:
    - meta_scope: declare.parameters.php
    - meta_content_scope: declare.parameters.content.php
    - match: (?=\))
      pop: true
    - match: (?=\S)
      push: [
        value,
        operator,
        directive
      ]

  directive:
    - match: (?==)
      pop: true
    - match: |
        (?x)\b
        (?> ticks
          | encoding
          | strict
        )\b
      scope: keyword.directive.php
      pop: true

  operator:
    - match: =
      scope: keyword.operator.assignment.php
      pop: true

  value:
    - include: Packages/Naomi/syntaxes/php7/literal.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/constant.sublime-syntax

  body:
    - meta_content_scope: >-
        declare.php
        declare.body.php
    - match: ;
      scope: punctuation.delimiter.statement.declare.body.begin.php
      set: implicit-body
    - match: \{
      scope: punctuation.delimiter.statement.declare.body.begin.php
      set: bracketed-body

  body-content:
    - include: Packages/Naomi/syntaxes/php7/comment.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/literal.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/constant.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/operator.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/declare.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/namespace.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/use.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/modifier.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/keyword.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/trait.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/interface.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/class.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/function.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/new-object.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/function-call.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/variable.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/type.sublime-syntax

  implicit-body:
    - meta_content_scope:
        declare.php
        declare.body.php
        declare.body.content.php
    - include: implicit-body-content

  implicit-body-content:
    - match: (?=\S)
      push:
        - include: body-content
        - match: (?=\bdeclare\b)
          pop: true

  bracketed-body:
    - meta_content_scope: >-
        declare.php
        declare.body.php
        declare.body.content.php
    - match: \}
      scope: >-
        declare.php
        declare.body.php
        punctuation.delimiter.statement.declare.body.end.php
      pop: true
    - include: bracketed-body-content

  bracketed-body-content:
    - match: (?=\S)
      push:
        - include: body-content
        - match: (?=\})
          pop: true
