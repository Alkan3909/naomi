hidden: true

variables:
  commonIdentifier: |
    [_[:alpha:]]
    [_[:alnum:]]*

scope: ...

contexts:
  main:
    - match: (?i)\bdeclare\b
      scope: keyword.declare.php.php7
      push: declaration

  declaration:
    - meta_scope: declare.php.php7
    - match: \(
      scope: punctuation.delimiter.declare.parameters.begin.php.php7
      push: parameters
    - match: \)
      scope: >-
        declare.parameters.php.php7
        punctuation.delimiter.declare.parameters.end.php.php7
      set: body

  parameters:
    - meta_scope: declare.parameters.php.php7
    - meta_content_scope: declare.parameters.content.php.php7
    - match: (?=\))
      pop: true
    - match: (?=\S)
      push: [
        value,
        operator,
        directive
      ]

  directive:
    - match: (?==)
      pop: true
    - match: |
        (?x)\b
        (?> ticks
          | encoding
          | strict
        )\b
      scope: keyword.directive.php.php7
      pop: true

  operator:
    - match: =
      scope: keyword.operator.other.assignment.php.php7
      pop: true

  value:
    - include: Packages/Naomi/syntaxes/php7/literal.sublime-syntax
    - include: Packages/Naomi/syntaxes/php7/constant.sublime-syntax

  body:
    - meta_content_scope: >-
        declare.php.php7
        declare.body.php.php7
    - match: ;
      scope: punctuation.delimiter.declare.body.begin.php.php7
      set: implicit-body
    - match: \{
      scope: punctuation.delimiter.declare.body.begin.php.php7
      set: bracketed-body

  body-content:
    - include: Packages/Naomi/syntaxes/php7/statement.sublime-syntax

  implicit-body:
    - meta_content_scope:
        declare.php.php7
        declare.body.php.php7
        declare.body.content.php.php7
    - include: implicit-body-content

  implicit-body-content:
    - match: (?=\S)
      push:
        - include: body-content
        - match: (?=\bdeclare\b)
          pop: true

  bracketed-body:
    - meta_content_scope: >-
        declare.php.php7
        declare.body.php.php7
        declare.body.content.php.php7
    - match: \}
      scope: >-
        declare.php.php7
        declare.body.php.php7
        punctuation.delimiter.declare.body.end.php.php7
      pop: true
    - include: bracketed-body-content

  bracketed-body-content:
    - match: (?=\S)
      push:
        - include: body-content
        - match: (?=\})
          pop: true
