hidden: true

scope: ...

contexts:
  main:
    - match: \/\/|#
      scope: punctuation.comment.begin.php
      set: line
    - match: \/\*
      scope: punctuation.comment.begin.php
      set: block

  line:
    - meta_scope: comment.line.php
    - meta_content_scope: comment.content.php
    - match: $
      pop: true

  block:
    - meta_scope: comment.block.php
    - meta_content_scope: comment.content.php
    - match: \*\/
      scope: punctuation.comment.end.php
      pop: true
