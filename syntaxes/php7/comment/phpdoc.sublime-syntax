  param:
    - match: \B(@)param\b
      captures:
        0: keyword.documentation.param.phpdoc
        1: punctuation.keyword.begin.phpdoc
      push: [
        param-variable,
        param-types
      ]

  param-types:
    - match: (?=\$|$)
      pop: true
    - match: ""
      push: [
        param-type-delimiter,
        param-type
      ]

  param-type:
    - match: (?=\$|$)
      pop: true
    - include: Packages/Naomi/syntaxes/php7/type.sublime-syntax

  param-type-delimiter:
    - match: (?=\$|$)
      pop: true
    - match: \|
      scope: punctuation.delimiter.types.phpdoc
      pop: true

  param-variable:
    - include: Packages/Naomi/syntaxes/php7/variable.sublime-syntax

  property:
    - match: \B(@)property\b
