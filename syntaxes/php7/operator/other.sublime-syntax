hidden: true

scope: ...

variables:
  commonIdentifier: |
    [a-z\x{7f}-\x{ff}_]
    [a-z\x{7f}-\x{ff}0-9_]*

  constantIdentifier: |
    [A-Z\x{7f}-\x{ff}_]
    [A-Z\x{7f}-\x{ff}0-9_]*

contexts:
  # |  Operator  |  Description        |
  # | :--------: | :------------------ |
  # | instanceof |                     |
  # |     @      | Error suppression.  |
  # |     ->     | Member access.      |
  # |     ::     | Scope resolution.   |
  # |    ...     | Argument unpacking. |
  main:
    - match: (?xi)\binstanceof\b
      scope: keyword.operator.type.php.7
      pop: true
    - match: "@"
      scope: keyword.operator.error.suppression.php.7
      pop: true
    - match: "\\.\\.\\."
      scope: keyword.operator.argument.unpacking.php.7
      pop: true
    - match: "->"
      scope: keyword.operator.member.access.php.7
      set: member-access
    - match: "::"
      scope: keyword.operator.scope.resolution.php.7
      set: scope-resolution

  member-access:
    - include: Packages/Naomi/syntaxes/php7/function-call/normal.sublime-syntax
    # Constant.
    - match: (?x)\b{{constantIdentifier}}
      scope: constant.php.7
      pop: true
    # Property.
    - match: (?xi){{commonIdentifier}}
      scope: >-
        variable.property.php.7
        entity.name.variable.php.7
      pop: true

  scope-resolution:
    - include: Packages/Naomi/syntaxes/php7/function-call/normal.sublime-syntax
    # Class name as string.
    - match: \bclass\b
      scope: keyword.other.class.name.php.7
      pop: true
    # Variable.
    - match: (?xi)(\$)({{commonIdentifier}})
      captures:
        0: variable.static.php.7
        1: punctuation.variable.begin.php.7
        2: entity.name.variable.php.7
      pop: true
    # Constant.
    - match: (?x)\b{{constantIdentifier}}
      scope: constant.php.7
      pop: true
