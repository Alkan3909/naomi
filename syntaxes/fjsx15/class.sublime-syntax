hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_[:alnum:]]*

contexts:
  main:
    - match: \bclass\b
      scope: keyword.class.js.2015
      set: identifier

  identifier:
    - match: (?=\bextends\b)
      set: [
        body,
        extension
      ]
    - match: (?=\{)
      set: body
    # Actual identifier.
    - match: (?xi){{commonIdentifier}}
      scope: entity.name.class.js.2015
      set: optional-template-parameters

  extension:
    - match: \bextends\b
      scope: keyword.extension.js.2015
      set: type

  type:
    - include: Packages/Naomi/syntaxes/fjsx15/type.sublime-syntax

  template-parameters:
    - include: Packages/Naomi/syntaxes/fjsx15/template/parameters.sublime-syntax

  optional-template-parameters:
    - match: (?=<)
      set: [
        optional-extension,
        template-parameters
      ]
    - match: (?=\bextends\b)
      set: [
        body,
        extension
      ]
    - match: (?=\{)
      set: body

  optional-extension:
    - match: (?=\bextends\b)
      set: [
        body,
        extension
      ]
    - match: (?=\{)
      set: body

  body:
    - meta_content_scope: >-
        class.js.2015
        class.body.js.2015
    - include: comment
    - match: \{
      scope: punctuation.delimiter.class.body.begin.js.2015
      set: body-content

  body-content:
    - meta_content_scope: >-
        class.js.2015
        class.body.js.2015
    - include: comment
    - match: \}
      scope: >-
        class.js.2015
        class.body.js.2015
        punctuation.delimiter.class.body.end.js.2015
      pop: true
    - match: ""
      push:
        - include: allowed-expressions
        - include: balance-braces
        - match: (?=\})
          pop: true

  comment:
    - include: Packages/Naomi/syntaxes/fjsx15/comment.sublime-syntax

  allowed-expressions:
    - include: Packages/Naomi/syntaxes/fjsx15/method.sublime-syntax
    - include: Packages/Naomi/syntaxes/fjsx15/member-variable.sublime-syntax

  balance-braces:
    - match: \{
      push:
        - match: \}
          pop: true
        - include: allowed-expressions
        - include: balance-braces
