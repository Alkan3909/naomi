hidden: true

scope: ...

contexts:
  main:
    - match: |
        (?x)
        \[
        (?!
          [^;]*?\]
          \s*=[^=]
        )
      scope: punctuation.delimiter.array.begin.js.fjsx15
      set: array-items

  array-items:
    - include: Packages/Naomi/syntaxes/fjsx15/comment.no-pop.sublime-syntax
    - include: terminator
    - match: (?=\S)
      set: [
        punctuation,
        value
      ]

  punctuation:
    - include: terminator
    - match: \,
      scope: punctuation.delimiter.array.js.fjsx15
      set: [
        punctuation,
        value
      ]

  terminator:
    - match: \]
      scope: punctuation.delimiter.array.end.js.fjsx15
      pop: true

  value:
    - include: Packages/Naomi/syntaxes/fjsx15/expression.sublime-syntax
