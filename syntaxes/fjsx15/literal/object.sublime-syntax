hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_[:alnum:]]*

contexts:
  main:
    # Empty object literal.
    - match: |
        (?x)
        (\{)\s*(\})
      captures:
        1: punctuation.delimiter.object.begin.js.fjsx15
        2: punctuation.delimiter.object.end.js.fjsx15
      pop: true
    # Normal object literal.
    - match: |
        (?x)
        \{
        (?!
          [^;]*?\}
          \s*=[^=]
        )
      scope: punctuation.delimiter.object.begin.js.fjsx15
      set: [
        punctuation,
        property-or-method
      ]

  property-or-method:
    - include: comment
    - match: (?=})
      pop: true
    - include: decorator
    - include: method
    - include: property

  decorator:
    - include: Packages/Naomi/syntaxes/fjsx15/decorator.no-pop.sublime-syntax

  method:
    - include: Packages/Naomi/syntaxes/fjsx15/method.sublime-syntax

  property:
    # String property name.
    - match: (?=(?>'|"|`))
      set: [
        optional-value,
        string
      ]
    # Computed property name.
    - match: \[
      scope: operator.property.computed.begin.js.fjsx15
      set: [
        optional-value,
        computed-property-end,
        expression
      ]
    # Normal property.
    - match: |
        (?xi)
        {{commonIdentifier}}
      scope: >-
        variable.js.fjsx15
        entity.name.variable.js.fjsx15
      set: optional-value

  computed-property-end:
    - match: \]
      scope: operator.property.computed.end.js.fjsx15
      pop: true

  string:
    - include: Packages/Naomi/syntaxes/fjsx15/literal/string/double-quoted.sublime-syntax
    - include: Packages/Naomi/syntaxes/fjsx15/literal/string/single-quoted.sublime-syntax
    - include: Packages/Naomi/syntaxes/fjsx15/literal/string/template.sublime-syntax

  optional-value:
    - include: comment
    - match: ":"
      scope: operator.association.js.fjsx15
      set: value
    - match: (?=\S)
      pop: true

  value:
    - include: comment
    - include: expression

  punctuation:
    - include: comment
    - match: \,
      scope: punctuation.delimiter.object.js.fjsx15
      set: [
        punctuation,
        property-or-method
      ]
    - match: \}
      scope: punctuation.delimiter.object.end.js.fjsx15
      pop: true

  comment:
    - include: Packages/Naomi/syntaxes/fjsx15/comment.no-pop.sublime-syntax

  expression:
    - include: Packages/Naomi/syntaxes/fjsx15/statement-and-expression.sublime-syntax
