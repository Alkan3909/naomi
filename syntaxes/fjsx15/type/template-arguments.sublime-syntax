hidden: true

scope: ...

contexts:
  main:
    - match: \s*(<)
      captures:
        1: punctuation.delimiter.template.arguments.begin.flowtype
      set: [
        final-pointer-operator,
        delimiter,
        argument-pointer-operator,
        argument
      ]
    - match: (?=\S)
      pop: true

  argument:
    - include: Packages/Naomi/syntaxes/fjsx15/type.sublime-syntax

  argument-pointer-operator:
    - match: (?=[,>])
      pop: true
    - match: \s*(\*+)
      captures:
        1: operator.pointer.flowtype

  delimiter:
    - match: \>
      scope: punctuation.delimiter.template.arguments.end.flowtype
      pop: true
    - match: \,
      scope: punctuation.delimiter.template.arguments.flowtype
      set: [
        delimiter,
        argument-pointer-operator,
        argument
      ]
    - match: \<
      scope: punctuation.delimiter.template.arguments.begin.flowtype
      push: [
        delimiter,
        argument-pointer-operator,
        argument
      ]

  final-pointer-operator:
    - match: \s*(\*+)
      captures:
        1: operator.pointer.flowtype
      pop: true
    - match: ""
      pop: true
