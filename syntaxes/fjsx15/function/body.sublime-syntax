hidden: true

scope: ...

variables:
  commonIdentifier: |
    [_[:alpha:]]
    [_[:alnum:]]*

contexts:
  main:
    # End.
    - match: ;
      scope: punctuation.delimiter.function.declaration.end.js.2015
      pop: true
    # Arrow function.
    - match: =>
      scope: >-
        function.body.js.2015
        punctuation.delimiter.function.body.js.2015
      set: arrow-body
    # Normal function.
    - match: \{
      scope: >-
        function.body.js.2015
        punctuation.delimiter.function.body.begin.js.2015
      set: body-content

  body-content:
    - meta_content_scope: >-
        function.js.2015
        function.body.js.2015
        function.body.content.js.2015
    - match: \}
      scope: >-
        function.js.2015
        function.body.js.2015
        punctuation.delimiter.function.body.end.js.2015
      pop: true
    - match: ""
      push:
        # Statements.
        - include: Packages/Naomi/syntaxes/js15/statement/hanging.sublime-syntax
        - include: Packages/Naomi/syntaxes/js15/statement/bodied.sublime-syntax
        - include: Packages/Naomi/syntaxes/js15/statement/simple.sublime-syntax
        # Expressions.
        - include: Packages/Naomi/syntaxes/fjsx15/expression.sublime-syntax

  arrow-body:
    - meta_content_scope: >-
        function.js.2015
        function.body.js.2015
        function.body.content.js.2015
    - match: |
        (?x)
        (?=
          (?> ;
            | \)
            | ]
            | }
          )
        )
      pop: true
    - include: Packages/Naomi/syntaxes/fjsx15/expression.sublime-syntax
