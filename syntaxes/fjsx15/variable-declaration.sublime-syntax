hidden: true

scope: ...

variables:
  commonIdentifier: |
    [_[:alpha:]]
    [_[:alnum:]]*

contexts:
  main:
    # Destructure object.
    - match: |
        (?x)
        (?=
          (?> let
            | var
          )\s+\{
        )
      set: [
        punctuation,
        destructure-object,
        keyword
      ]
    # Destructure array.
    - match: |
        (?x)
        (?=
          (?> let
            | var
          )\s+\[
        )
      set: [
        punctuation,
        destructure-array,
        keyword
      ]
    # Simple variable.
    - match: |
        (?x)
        (?=
          (?> let
            | var
          )\b
        )
      set: [
        punctuation,
        variable,
        keyword
      ]

  destructure-object:
    - include: Packages/Naomi/syntaxes/fjsx15/destructure-object.sublime-syntax

  destructure-array:
    - include: Packages/Naomi/syntaxes/fjsx15/destructure-array.sublime-syntax

  keyword:
    - match: |
        (?x)
        (?> let
          | var
        )\b
      scope: keyword.variable.declaration.js.2015
      pop: true

  variable:
    - include: Packages/Naomi/syntaxes/fjsx15/variable.sublime-syntax

  punctuation:
    - include: terminator
    - match: ":"
      scope: operator.type.flowtype
      set: [
        optional-value,
        type
      ]
    - include: optional-value

  optional-value:
    - include: terminator
    - match: =
      scope: operator.assignment.js.2015
      set: value

  type:
    - include: Packages/Naomi/syntaxes/fjsx15/type.sublime-syntax

  value:
    - include: sibling
    - include: Packages/Naomi/syntaxes/fjsx15/expression.sublime-syntax

  terminator:
    - include: sibling
    - include: Packages/Naomi/syntaxes/fjsx15/terminator.sublime-syntax

  sibling:
    - match: \,
      scope: punctuation.delimiter.js.2015
      set: [
        punctuation,
        variable
      ]
