hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_[:alnum:]]*

contexts:
  main:
    - match: |
        (?x)\b
        (?:
          (async)\s+
        )?
        (function)\b
      captures:
        1: keyword.modifier.fjsx15
        2: keyword.function.fjsx15
      set: identifier

  identifier:
    - meta_scope: function.fjsx15
    # Start of template parameters (no identifier).
    - match: (?=<)
      set: [
        body,
        return-type,
        parameters,
        template-parameters
      ]
    # Start of parameters (no identifier).
    - match: (?=\()
      set: [
        body,
        return-type,
        parameters
      ]
    # Actual identifier.
    - match: |
        (?xi)
        \s*\*?
        (?:
          \s*
          {{commonIdentifier}}
        )?
      scope: entity.name.function.fjsx15
      set: optional-template-parameters

  template-parameters:
    - include: Packages/Naomi/syntaxes/fjsx15/template/parameters.sublime-syntax

  parameters:
    - include: Packages/Naomi/syntaxes/fjsx15/function/parameters.sublime-syntax

  optional-template-parameters:
    - match: (?=\()
      set: [
        body,
        return-type,
        parameters
      ]
    - match: (?=<)
      set: [
        body,
        return-type,
        parameters,
        template-parameters
      ]

  return-type:
    - match: |
        (?x)
        (?=
          (?> ;
            | {
          )
        )
      pop: true
    - include: Packages/Naomi/syntaxes/fjsx15/function/return-type.sublime-syntax

  body:
    - include: Packages/Naomi/syntaxes/fjsx15/function/body.sublime-syntax
