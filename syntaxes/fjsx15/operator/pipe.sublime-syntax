hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_[:alnum:]]*

contexts:
  main:
    - match: \s*(\|>)
      captures:
        1: keyword.operator.pipe.js.fjsx15
      set: target

  other-expressions:
    - match: (?=\s*\S)
      pop: true

  target:
    - include: Packages/Naomi/syntaxes/fjsx15/arrow-function.sublime-syntax
    # Await keyword.
    - match: \s*(await)\b
      captures:
        1: keyword.control.flow.js.fjsx15
      set: function-identifier
    # Simple identifier.
    - match: |
        (?xi)
        (?=
          \s*{{commonIdentifier}}\s*
          (?>\|>|$)
        )
      set: function-identifier
    - include: other-expressions

  function-identifier:
    # Simple function.
    - match: |
        (?xi)\s*
        ({{commonIdentifier}})
      captures:
        1: >-
          meta.function-call.js.fjsx15
          variable.function.js.fjsx15
      pop: true
    - include: other-expressions
